<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background_page"
    android:layout_height="match_parent"
    tools:context=".ui.Dashboard.RoomManagement">

    <LinearLayout
        android:id="@+id/emp_action_bar"
        android:layout_margin="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/baseline_arrow_back_ios_new_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Room"
            android:gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:textSize="@dimen/_17sdp"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/black"/>
    </LinearLayout>

    <ScrollView
        android:layout_below="@id/emp_action_bar"
        android:layout_centerHorizontal="true"
        android:background="@color/background_page"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_42sdp"
                android:layout_marginStart="@dimen/_23sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_23sdp"
                android:hint="Room ID"
                app:boxBackgroundColor="@android:color/transparent"
                app:boxCornerRadiusTopEnd="@dimen/_11sdp"
                app:boxCornerRadiusTopStart="@dimen/_11sdp"
                app:hintTextAppearance="@style/TextStyle"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_room_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:textAppearance="@style/TextStyle"
                    tools:ignore="TextSizeCheck" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_42sdp"
                android:layout_marginStart="@dimen/_23sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_23sdp"
                android:hint="Room Name"
                app:boxBackgroundColor="@android:color/transparent"
                app:boxCornerRadiusTopEnd="@dimen/_11sdp"
                app:boxCornerRadiusTopStart="@dimen/_11sdp"
                app:hintTextAppearance="@style/TextStyle"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/create_room_name"
                    android:inputType="textPersonName"
                    android:textAppearance="@style/TextStyle"
                    tools:ignore="TextSizeCheck" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_42sdp"
                android:layout_marginStart="@dimen/_23sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_23sdp"
                android:hint="Seat Capacity"
                app:boxBackgroundColor="@android:color/transparent"
                app:boxCornerRadiusTopEnd="@dimen/_11sdp"
                app:boxCornerRadiusTopStart="@dimen/_11sdp"
                app:hintTextAppearance="@style/TextStyle"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/create_room_seat"
                    android:inputType="textEmailAddress"
                    android:textAppearance="@style/TextStyle"
                    tools:ignore="TextSizeCheck" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_42sdp"
                android:layout_marginStart="@dimen/_23sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_23sdp"
                android:hint="Floor No"
                app:boxBackgroundColor="@android:color/transparent"
                app:boxCornerRadiusTopEnd="@dimen/_11sdp"
                app:boxCornerRadiusTopStart="@dimen/_11sdp"
                app:hintTextAppearance="@style/TextStyle"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/create_room_floor"
                    android:inputType="phone"
                    android:textAppearance="@style/TextStyle"
                    tools:ignore="TextSizeCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="@dimen/_266sdp"
                android:layout_marginTop="@dimen/_20sdp"
                app:boxCornerRadiusTopEnd="@dimen/_11sdp"
                app:boxCornerRadiusTopStart="@dimen/_11sdp"
                android:layout_marginStart="@dimen/_23sdp"
                android:layout_marginEnd="@dimen/_23sdp"
                app:boxBackgroundColor="@android:color/transparent"
                android:layout_height="@dimen/_45sdp"
                android:textAppearance="@style/TextStyle"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                app:hintTextColor="@color/black"
                android:hint="Room Facilities">

                <AutoCompleteTextView
                    android:id="@+id/create_room_facilities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="@dimen/_10sdp"
                    android:inputType="none"
                    tools:ignore="LabelFor" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_266sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_20sdp"
                app:cardCornerRadius="@dimen/_14sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/_50sdp"
                        android:src="@drawable/baseline_add_a_photo_24"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Room Photos"
                        android:fontFamily="@font/montserrat_semibold"
                        android:layout_marginEnd="@dimen/_50sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:textSize="@dimen/_11sdp"
                        android:layout_toEndOf="@+id/img"
                        android:layout_alignParentEnd="true"/>


                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>



            <com.google.android.material.button.MaterialButton

                android:id="@+id/create_room_btn"
                android:layout_width="@dimen/_270sdp"
                app:cornerRadius="@dimen/_11sdp"
                android:layout_height="@dimen/_42sdp"

                android:text="Add Room"
                android:layout_marginTop="@dimen/_20sdp"/>




        </LinearLayout>

    </ScrollView>

</RelativeLayout>